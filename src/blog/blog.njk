---
layout: blog/layout_container_blog.njk
title: INICIO
description: Bienvenido a mi sitio web
pagination:
  data: site.languages
  alias: lang
  size: 1      
  addAllPagesToCollections: true
permalink: "{{ '/' + lang if lang != 'es' else '' }}/blog/index.html"
eleventyComputed:
    lang: "{{ lang }}"
    title: "{{ title or translations[lang].home }}"
---

{% for post in collections.blogPosts %}
    <article class="blog-post">
        <h2>{{ post.data.title }}</h2>
        <p class="meta">
            Publicado el {{ post.date.toLocaleDateString('es-ES') }} por 
            <a href="#">{{ post.data.author }}</a>
            <span class="separator mx-2">|</span>
            {% if post.data.lang_post %}
                <span class="lang-flag">
                    <img src="/assets/img/icon/flags/{{ post.data.lang_post }}.svg" alt="{{ post.data.lang_post }}" style="height:1em;vertical-align:middle;">
                    {{ post.data.lang_post | upper }}
                </span>
            {% endif %}
        </p>
        {% if post.data.image %}
            <img src="/assets/img/blog/{{ post.data.image }}" class="img-fluid rounded mb-3" alt="{{ post.data.imageAlt or post.data.title }}">
        {% endif %}
        <p>
            {{ post.data.description }}
        </p>
        <a href="{{ post.url }}" class="read-more">Leer más &raquo;</a>
    </article>
{% endfor %}



