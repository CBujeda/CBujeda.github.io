{% for proyecto in proyectosList.proyectos | reverse %}
    {%if proyecto.destacado%}
    <div class="col">
        <div class="card h-100 shadow-sm rounded-4 project-card">
            <div class="position-relative">
                <img src="/assets/img/proyectos/covers/{{proyecto.imagen}}" class="card-img-top rounded-top" alt="Proyecto 1">
                <span class="position-absolute bottom-0 start-0 m-2 px-2 py-1 {{ proyecto.estado_color }} text-white rounded small" style="opacity: 0.85;">
                    {{ proyecto.estado }}
                </span>
            </div>
            <div class="card-body d-flex flex-column">  
                <h5 class="card-title"><b>{{ proyecto.nombre }}</b></h5>
                <p class="card-text">
                    {{ (proyecto.descripcion[lang] or proyecto.descripcion['en']) | truncate(225, true, '...') }}
                </p>
                <div class="mt-auto">
                    {%for tecnologia in proyecto.tecnologias%}
                        <span class="badge bg-secondary me-1">{{tecnologia.nombre}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="card-footer bg-white border-0">
                {%if proyecto.have_repository%}
                    <a href="{{proyecto.repositorio}}" class="btn btn-outline-primary btn-sm me-2 rounded-pill"><i class="fab fa-github me-1"></i> GitHub</a>
                {% endif %}
                {%if proyecto.have_web%}
                    <a href="/projects/list/{{proyecto.web_name}}" class="btn btn-outline-dark btn-sm rounded-pill"><i class="fas fa-external-link-alt me-1"></i>{{ translations[lang].view_button}} </a>
                {% endif %}

                {%for link in proyecto.links%}
                         <a href="{{link.url}}" class="btn btn-outline-dark btn-sm rounded-pill"><i class="fas fa-external-link-alt me-1"></i>{{link.nombre}}</a>
                {% endfor %}
            </div>
        </div>
    </div>
     {% endif %}
{% endfor %}