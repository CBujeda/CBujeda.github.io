<!-- Sección Contacto -->

<div id="contacto">
    <div class="row">
        <div class="col-12">
            <section id="contacto" class="py-5 text-white">
                <div class="container">
                    <h2 class="text-center mb-4 text-white">{{ translations[lang].contact_me }}</h2>
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <p class="text-center mb-4">{{ translations[lang].contact_me_description }}</p>
                            <form>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control rounded-pill" id="email" value="clarabujedamunoz@gmail.com" readonly onclick="this.select();" aria-label="Correo electrónico">
                                    <button class="btn btn-outline-secondary rounded-5" type="button" onclick="window.location.href='mailto:clarabujedamunoz@gmail.com'">
                                        <img src="/assets/img/icon/envelope-at.svg" alt="Copiar correo" width="24" height="24" class="d-inline-block align-text-top" style="filter: invert(1) brightness(2);">

                                    </button>
                                    <button class="btn btn-outline-secondary rounded-5" type="button" id="copyEmailBtn" onclick="copyEmail()">
                                        <img src="/assets/img/icon/copy.svg" alt="Copiar correo" width="24" height="24" class="d-inline-block align-text-top" style="filter: invert(1) brightness(2);">
                                    </button>
                                    <!-- Animación de éxito al copiar -->
                                    <span id="copySuccess" class="position-fixed top-50 start-50 translate-middle p-2 bg-success text-white rounded shadow" 
                                    style="display:none; z-index:1050; transition: opacity 0.5s;">¡Copiado!</span>
                                    <script>
                                        function copyEmail() {
                                            navigator.clipboard.writeText('clarabujedamunoz@gmail.com').then(function() {
                                                const successMsg = document.getElementById('copySuccess');
                                                successMsg.style.display = 'inline';
                                                successMsg.style.opacity = 1;
                                                setTimeout(() => {
                                                    successMsg.style.opacity = 0;
                                                    setTimeout(() => {
                                                        successMsg.style.display = 'none';
                                                    }, 500);
                                                }, 1200);
                                            });
                                        }
                                    </script>
                                    <!-- Fin de la animación de éxito -->
                                </div>

                            </form>

                            
                        </div>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-4 social-links-animated">
                        <a href="https://www.linkedin.com/in/clara-bujeda/" target="_blank" rel="noopener" class="btn rounded-pill p-2 social-link" style="background: #fff; border: 1px solid #0a66c2;">
                            <img src="/assets/img/icon/social/linkedin.svg" alt="LinkedIn" width="28" height="28" class="social-icon" style="filter: invert(32%) sepia(98%) saturate(2092%) hue-rotate(186deg) brightness(97%) contrast(101%);">
                        </a>
                        <a href="https://github.com/CBujeda" target="_blank" rel="noopener" class="btn rounded-pill p-2 social-link" style="background: #fff; border: 1px solid #24292f;">
                            <img src="/assets/img/icon/social/github.svg" alt="GitHub" width="28" height="28" class="social-icon" style="filter: invert(0%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(0.5) contrast(100%);">
                        </a>
                        <a href="https://www.youtube.com/@clarabujeda" target="_blank" rel="noopener" class="btn rounded-pill p-2 social-link" style="background: #fff; border: 1px solid #ff0000;">
                            <img src="/assets/img/icon/social/youtube.svg" alt="YouTube" width="28" height="28" class="social-icon" style="filter: invert(18%) sepia(99%) saturate(7482%) hue-rotate(1deg) brightness(98%) contrast(119%);">
                        </a>
                    </div>
          
                </div>
            </section>
        </div>
    </div>
</div>







